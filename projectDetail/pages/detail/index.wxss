.project-detail {
    background-color: #14192a;
    min-height: 100%;
    color: #6c6d7a;
}
.detail-img {
    width: 100%;
    height: 608rpx;
}
.img {
    width: 100%;
    height: 100%;
}
.detail-item {
    margin: 0rpx 120rpx;
    padding: 20rpx 0rpx 60rpx;
}
.flex-row {
    display:flex;
    height:180rpx;
    justify-content:center;
    align-items:center;
    text-align:center;
    border-bottom:4rpx solid #2c2a3a;
}
.flex-column {
    flex:1;
    color:#508A84;
    font-size:34rpx;
}
.flex-column-text {
    display:block;
    color:#B1B1B4;
    font-size:30rpx;
    margin-bottom:6rpx;
}
.no-border {
    border-bottom:none;
}